<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_verticalS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontalT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_verticalE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_page_user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="@+id/guideline_verticalS"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontalT" />

    <TextView
            android:id="@+id/detail_page_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/detail_page_user_avatar"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontalT" />

    <!--    On the bottom of avatar, align to left with avatar-->
    <TextView
            android:id="@+id/detail_page_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/guideline_verticalS"
            app:layout_constraintTop_toBottomOf="@id/detail_page_user_avatar" />

    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="#00FAFAFA"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_page_user_text"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="@id/guideline_verticalS"
            app:layout_constraintEnd_toEndOf="@id/guideline_verticalE">

        <ImageView
                android:id="@+id/TWEET_PIC_1"
                android:layout_width="0dp"
                android:layout_height="100dip"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/detail_page_user_text"
                app:layout_constraintTop_toBottomOf="@+id/detail_page_user_text" />

        <ImageView
                android:id="@+id/TWEET_PIC_2"
                android:layout_width="0dp"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/detail_page_user_text"
                app:layout_constraintTop_toBottomOf="@+id/detail_page_user_text" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="12dp"
            android:background="#fafafa"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linear_layout_like_commit_rt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
                android:id="@+id/TWEET_PIC_3"
                android:layout_width="0dp"
                android:layout_height="100dip"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/TWEET_PIC_2"
                app:layout_constraintTop_toBottomOf="@+id/TWEET_PIC_2" />

        <ImageView
                android:id="@+id/TWEET_PIC_4"
                android:layout_width="0dp"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/TWEET_PIC_2"
                app:layout_constraintTop_toBottomOf="@+id/TWEET_PIC_2" />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/linear_layout_like_commit_rt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="340dp"
            android:background="#00fafafa"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/icon_not_favorite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_not_favorite"
                app:layout_constraintBottom_toBottomOf="@+id/icon_not_forward"
                app:layout_constraintEnd_toStartOf="@+id/icon_not_forward"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/icon_not_forward"
                app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/icon_not_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_not_comment"
                app:layout_constraintBottom_toBottomOf="@+id/icon_not_forward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_not_forward"
                app:layout_constraintTop_toTopOf="@+id/icon_not_forward" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/icon_not_forward"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_not_retweet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout><!--<?xml version="1.0" encoding="utf-8"?>-->

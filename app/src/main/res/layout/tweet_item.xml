<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_page_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/detail_page_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/detail_page_user_avatar"
        android:textStyle="bold"/>
    //推文user_text

    <TextView
            android:id="@+id/detail_page_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_page_user_avatar"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/detail_page_user_avatar" />
    <!--    android:layout_below="@id/user_text"-->
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/detail_page_user_text"
        android:layout_toRightOf="@id/detail_page_user_avatar">

        <ImageView
            android:id="@+id/TWEET_PIC_1"
            android:layout_width="0dp"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/TWEET_PIC_2"
            android:layout_width="0dp"
            android:layout_height="80dip"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/TWEET_PIC_3"
            android:layout_width="0dp"
            android:layout_height="80dip"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/TWEET_PIC_4"
            android:layout_width="0dp"
            android:layout_height="80dip"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/detail_page_not_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dip"
        android:layout_marginBottom="8dip"
        android:layout_below="@id/detail_page_user_text"
        android:layout_toRightOf="@id/detail_page_user_avatar"
        android:src="@drawable/ic_not_favorite"  />

    <ImageView
        android:id="@+id/detail_page_not_comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/detail_page_user_text"
        android:layout_alignParentBottom="@id/detail_page_user_text"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="100dip"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="8dip"
        android:layout_toRightOf="@id/detail_page_not_like"
        android:src="@drawable/ic_not_comment" />

    <ImageView
        android:id="@+id/icon_not_retweet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/detail_page_user_text"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="100dip"
        android:layout_marginBottom="8dip"
        android:layout_marginStart="70dp"
        android:layout_toRightOf="@id/detail_page_not_comment"
        android:src="@drawable/ic_not_repeat" />
</RelativeLayout>